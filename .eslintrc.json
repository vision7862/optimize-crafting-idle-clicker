{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["standard-with-typescript", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["tsconfig.json"]
  },
  "rules": {
    "prettier/prettier": "error",
    "@typescript-eslint/consistent-type-imports": ["error", { "prefer": "no-type-imports" }]
  }
}
